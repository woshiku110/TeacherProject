.page{
    display: flex;
    width: 100%;
    position: absolute;
    background-color: white;
    flex-direction: column;  
}
.page_top{
    display: flex;
    height: 300rpx;
    width: 100%;  
}
.page_top_head{
    width: 200rpx;
    height: 200rpx;
    left: calc((100% - 200rpx) / 2);
    top:200rpx;
    position: absolute;
    border-radius: 100rpx;
    border: 1rpx white solid;       
}
.page_top_empty{
    width: 100%;
    height: 100rpx;
}
.page_top_desc{
    display: flex;
    width:100%;
    flex-direction: column; 
}
.page_content{
    display: flex;
    width: 100%;
    margin-top: 15rpx;
    flex-direction: column;
}
.page_content_subject{
    width: 90%;
    height: 65rpx;
    margin-left: 5%;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #e2e2e2;
}
/*.page_content_subject_tag{
